#include<stdio.h>
void square(int);
int main()
{
    int n;
    printf("Enter a number :");
    scanf("%d",&n);
    square(n);
    return 0;
}
void square(int x)
{
    int k;
    if(x==1)
    {
      printf("1");
            return 1;
    }
    square(x-1);
    printf(" %d",x*x);
    return x;
}
